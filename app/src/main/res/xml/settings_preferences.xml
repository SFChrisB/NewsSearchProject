<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/querySettings"
    android:background="@color/mainBackgroundColor">

    <ListPreference
        android:defaultValue="@string/queryOrderDef"
        android:entries="@array/settingsOrderLabels"
        android:entryValues="@array/settingsOrderValues"
        android:key="@string/queryOrderKey"
        android:title="@string/queryOrderLabel" />

    <EditTextPreference
        android:defaultValue="@string/querySettingsDef"
        android:inputType="text"
        android:key="@string/querySettingsKey"
        android:selectAllOnFocus="true"
        android:title="@string/querySettingsLabel" />
</PreferenceScreen>