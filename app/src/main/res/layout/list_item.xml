<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinStyle">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sectionXml"
            tools:text="Section"
            style="@style/SectionXMLStyle"/>

        <TextView
            android:text="@string/xmlType"
            style="@style/TypeXMLStyle"/>

        <TextView
            android:id="@+id/typeXml"
            tools:text="Type"
            style="@style/TypeXMLStyle"/>

    </LinearLayout>

    <TextView
        android:id="@+id/titleXml"
        tools:text="Title"
        style="@style/TitleStyle"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/xmlPubD"
            style="@style/PubLXMLStyle"/>

        <TextView
            android:id="@+id/dateXml"
            tools:text="Date"
            style="@style/DateXMLStyle"/>

    </LinearLayout>

</LinearLayout>